{
    "compilerOptions": {
        "target": "es6",
        "outDir": "build",
        "moduleResolution": "node",
        "declaration": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "downlevelIteration": true, /*only for tests*/
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
}
